FoamFile
{
    version	2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
    
    limited         cellLimited Gauss linear 1;
    grad(U)         $limited;
    grad(k)         $limited;
    grad(omega)     $limited;
}

divSchemes
{
    default         none;
    div(phi,U)      bounded Gauss upwind;//linearUpwind limited;
    div(phi,k)      bounded Gauss upwind;
    div(phi,omega)  bounded Gauss upwind;
    div(((rho*nuEff)*dev2(T(grad(U)))))	Gauss linear;
    
    energy          bounded Gauss upwind;//linearUpwind limited;
    div(phi,e)      $energy;
    div(phi,K)      $energy;
    div(phi,Ekp)    $energy;
    
    div(phid,p)     Gauss upwind;
    div((phi|interpolate(rho)),p)  bounded Gauss upwind;
}

laplacianSchemes // Laplaciano da Equação de NS
{
    default         Gauss linear corrected; //Gauss linear orthogonal;
}

interpolationSchemes // interpolação do centroide entre as células
{
    default         linear;
}

snGradSchemes
{
    default         corrected; //orthogonal;
}

wallDist // Calcular a altura do centróide da primeira célula em relação a parede
{
    method meshWave;
}


// ************************************************************************* //
